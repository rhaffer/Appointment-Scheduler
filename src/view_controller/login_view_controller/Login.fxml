<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.login_view_controller.Login">
   <HBox layoutX="14.0" layoutY="559.0" prefHeight="27.0" prefWidth="357.0">
      <Label fx:id="languageLabel" prefHeight="26.0" prefWidth="96.0" text="Language:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="defaultLocaleLabel" prefHeight="26.0" prefWidth="240.0">
         <font>
            <Font size="20.0" />
         </font>
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </Label>
   </HBox>
   <Button fx:id="signInButton" layoutX="236.0" layoutY="394.0" mnemonicParsing="false" onAction="#signInClicked" prefWidth="328.0" text="Sign In" />
   <TextField fx:id="userNameField" layoutX="236.0" layoutY="300.0" prefHeight="27.0" prefWidth="328.0" promptText="Username" />
   <PasswordField fx:id="passwordField" layoutX="236.0" layoutY="352.0" prefHeight="27.0" prefWidth="328.0" promptText="Password" />
   <Label fx:id="titleLabel" layoutX="227.0" layoutY="146.0" text="Appointment Scheduler">
      <font>
         <Font size="35.0" />
      </font>
   </Label>
   <Label fx:id="noAccountLabel" layoutX="336.0" layoutY="453.0" text="Don't have an account?" />
   <Label fx:id="createAccountLabel" layoutX="367.0" layoutY="476.0" onMouseClicked="#registerClicked" text="Create One!" textFill="#0949eb" />
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="registerPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.Register">
   <children>
      <Label fx:id="createAccountLabel" layoutX="290.0" layoutY="94.0" text="Create Account">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
      <Button fx:id="registerButton" layoutX="241.0" layoutY="344.0" mnemonicParsing="false" onAction="#registerButtonClicked" prefWidth="328.0" text="Register" />
      <TextField fx:id="usernameField" layoutX="241.0" layoutY="216.0" prefHeight="27.0" prefWidth="328.0" promptText="Username" />
      <PasswordField fx:id="password1Field" layoutX="241.0" layoutY="256.0" prefHeight="27.0" prefWidth="328.0" promptText="Password" />
      <PasswordField fx:id="password2Field" layoutX="241.0" layoutY="300.0" prefHeight="27.0" prefWidth="328.0" promptText="Confirm Password" />
      <Button fx:id="backToSignInButton" layoutX="14.0" layoutY="553.0" mnemonicParsing="false" onAction="#backToSignInClicked" text="Back to Sign In" />
   </children>
</AnchorPane>
